/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": [
      "ES2022",
      "dom"
    ],
    "paths": {
      "@ngx-neoumorphic/button": [
        "./src/components/button/button"
      ],
      "@ngx-neoumorphic/input": [
        "./src/components/input/input"
      ],
      "@ngx-neoumorphic/radio-button": [
        "./src/components/radio-button"
      ],
      "@ngx-neoumorphic/textarea": [
        "./src/components/textarea/textarea.component"
      ],
      "@ngx-neoumorphic/selector": [
        "./src/components/selector/selector.component"
      ],
      "@ngx-neoumorphic/slide-toggle": [
        "./src/components/slide-toggle/slide-toggle.component"
      ],
      "@ngx-neoumorphic/alert": [
        "./src/components/alert/"
      ],
      "@ngx-neoumorphic/card": [
        "./src/components/card/"
      ],
      "@ngx-neoumorphic/login-page": [
        "./src/components/login-page"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
